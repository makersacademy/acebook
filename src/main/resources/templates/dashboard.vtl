    <title>Acebook!</title>
    <link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=El Messiri' rel='stylesheet'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />


    <style>
    .title-font{
        font-family: 'Sofia';
        font-size: 30px;
        margin-top: 5rem;
        margin-bottom: 5rem;
        display: flex;
        flex-wrap: wrap;
        align-content: center;
        justify-content: center;
        align-items: center;
    }

    .text-area-styling{
      width: 30%;
      font-family: 'El Messiri';
      flex-wrap: wrap;
      align-content: center;
      justify-content: center;
      align-items: center;
      width: 50%;
      font-size: 2rem;
    }

    .post-table{

      width: 30%;
      font-family: 'El Messiri';
      flex-wrap: wrap;
      align-content: center;
      justify-content: center;
      align-items: center;
      width: 50%;
      font-size: 1.5rem;

    }

    body {

    background: linear-gradient(to right, #DAE2F8, #D6A4A4);

    }

    .custom-button{
      color:#00000030;
      font-size:2rem
    }

    .heart i.fa-heart{
      color: #f44336
    }
  </style>


  </head>


  <body>
    <div class="title-font">
        <h1 style="font-size: 50px; color: cornsilk;">&#129412; Acebook &#x2728;</h1>
    </div>

     <div class="title-font">
     #foreach( $user_name in $userName )
          <h3 style="font-size: 30px; color: cornsilk;">Hello, $user_name.user_name </h3>
            #end
        </div>

    <div class="container text-area-styling">
      <form action="/dashboard" method="post" class="form-group d-flex flex-column align-items-center">
          <label for="exampleFormControlTextarea1" style="color:cornsilk">Any thoughts today? :</label>
           <textarea class="form-control" id="exampleFormControlTextarea1" name= "send_post" rows="3" style="font-size:20px;"></textarea>
          <button type="submit" class="btn btn-primary" style="width: 100px; font-size:18px;">Send</button>
      </form>
    </div>

    <div class="container post-table">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" style="font-size:20px; color:cornsilk">Previous post</th>
          </tr>
        </thead>

        <tbody>
          #foreach( $post in $posts )
          <tr>
            <th scope="row">
            $post.content
            <br>
            Posted on: $post.time
            <br>
            <p class="like custom-button">
              <i class="fa fa-heart aria-hidden="true"></i>
            </>
          </tr>
           #end
        </tbody>
      </table>
    </div>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
      <script>
      $(document).ready(function(){
        $(".like").click(function(){
          $(this).toggleClass("heart")
        });
      });
      </script>

  </body>

</html>